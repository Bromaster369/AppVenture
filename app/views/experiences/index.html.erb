<%= index_display_header %>

<%= form_tag("/experiences", method: 'get') do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<br>
<%= form_tag("/experiences", method: 'get') do %>
  <%= label_tag(:category_id, "Select a Category:") %>
  <%= collection_select(:experience,:category_id, Category.all,:id, :name) %>
  <%= submit_tag("Filter") %>
<% end %>

<% if @experiences.blank? %>

    <h2>No experiences yet. Write a experience <%= link_to "here", new_experience_path%></h2>

<% else %>
  <%= render partial: "experiences", locals: {experiences: @experiences} %>

<% end %>