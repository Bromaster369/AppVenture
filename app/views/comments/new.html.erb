<% if @comment.experience %>
<h1>New Comment for <%= @comment.experience.title%>!</h1>
<% else %>
<h1>New Comment!</h1>
<% end %>


<%= render partial: "layouts/errors", locals: {object: @comment} %>

<%= form_for([@comment.experience,@comment]) do |f|%>

    <% if !@comment.experience %>
    <%= f.label :experience %>
    <%= f.collection_select :experience_id, Experience.all, :id, :title %>
    <% else %>
    <%= f.hidden_field :experience_id %>
    <% end %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <%= f.submit %>

<% end %>